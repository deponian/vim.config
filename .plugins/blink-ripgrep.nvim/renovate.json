{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "automerge": true,
  "extends": ["config:best-practices", "group:allNonMajor"],
  "commitBodyTable": true,
  "packageRules": [
    {
      "matchDepNames": ["lua"],
      "allowedVersions": "<=5.1"
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "datasourceTemplate": "github-releases",
      "managerFilePatterns": [
        ".github/workflows/test.yml",
        ".github/workflows/style.yml",
        ".github/workflows/lint.yml"
      ],
      "matchStrings": [
        "#\\s*renovate:\\s*datasource=github-releases\\s+depName=(?<depName>\\S+)\\s*[\\r\\n]+[^:]+:\\s*(?<currentValue>\\S+)"
      ]
    },
    {
      "customType": "regex",
      "datasourceTemplate": "github-releases",
      "managerFilePatterns": [
        "integration-tests/test-environment/.config/nvim/init.lua"
      ],
      "matchStrings": [
        "-- renovate: datasource=github-releases depName=(?<depName>[^\\s]+)[\\s\\S]*?version\\s*=\\s*\"?(?<currentValue>[^\",]+)\"?"
      ]
    }
  ]
}
